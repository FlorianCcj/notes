[push]
	default = simple
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true
[color "branch"]
	current = yellow reverse
	local = green
	remote = red
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = green
	changed = yellow
	untracked = red
[core]
	pager = less -FRSX
	whitespace = fix,-indent-with-non-tab,trailling-space,cr-at-eol
	autocrlf = input
	# git config --global core.editor "vim"
	editor = vim
	hooksPath = ./.pre-commit
[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	dc = diff --cached
	lg = log -p
	ls = ls-files
	logg = log --graph --oneline --decorate
	root = rev-parse --show-toplevel
	## git config --global alias.dbr "\!git diff \$(git merge-base $2 HEAD) HEAD"
	dbr = !git diff $(git merge-base $2 HEAD) HEAD
	cempty = !git ci --allow-empty -m "fix(test): empty commit to test" && git push
[user]
	email = {{ git_gitconfig_user_mail }}
	name = {{ git_gitconfig_user }}
